<div id="app">

	<h2>Number of Incomplete tasks: {{numberOutstanding()}}</h2>
	
	<div v-for="filter in filters">
		<button v-on:click="filterTasks(filter)">{{filter}}</button>
	 </div>

 	<ol>
 		<div v-for="task in tasks">
 		<li v-on:click="markDone(task)" v-bind:class="{strike: task.completed}"> {{task.text}}</li>
 		</div>
 	</ol>
 	<h2>Add new task</h2>
 	Task: <input type="" v-model="newText">

 	<button v-on:click="addTask()">Add Task</button>
 	<p>
 	<button v-on:click="removeCompleted()">Delete Completed Tasks</button>
 	</p>
</div>